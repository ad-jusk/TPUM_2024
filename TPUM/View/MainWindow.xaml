<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="431" VerticalAlignment="Center" Width="175" Fill="#FF634AE7" Stroke="#FF634AE7"/>
        <Canvas Width="900" Height="600" x:Name="MainView" Visibility="{Binding MainViewVisibility}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical" Width="150" Height="400" Margin="10 10 10 10">
                    <Button Content="Pianina" MinHeight="40" MinWidth="150" Margin="0 0" Command= "{Binding PianoButton}" Background="{x:Null}" BorderBrush="White" Foreground="White"/>
                    <Button Content="Fortepiany" MinHeight="40" MinWidth="150" Margin="0 0" Command= "{Binding GrandPianoButton}" Background="{x:Null}" BorderBrush="White" Foreground="White"/>
                    <Button Content="Gitary" MinHeight="40" MinWidth="150" Margin="0 0" Command= "{Binding GuitarrButton}" BorderBrush="White" Foreground="White" Background="{x:Null}"/>
                    <Button Content="Klarnety" MinHeight="40" MinWidth="150" Margin="0 0" Command= "{Binding ClarinetButton}" Foreground="White" Background="{x:Null}" BorderBrush="White"/>
                    <Button Content="Koszyk" MinHeight="40" MinWidth="150" Margin="0 200 0 0" Command= "{Binding BasketButton}" BorderBrush="White" Foreground="White" Background="#FF161566"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="PromotionLink" FontSize="28">
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
